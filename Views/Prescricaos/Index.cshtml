@model IEnumerable<SGH2425_V3.Models.Prescricao>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista das Prescrições</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Prescrição</a>
</p>
<table id="myTable" class=" table table-bordered table-responsive table-hover table-responsive-lg">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoPrescricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Utentes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataPrescricao)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ValidadePrescricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>Solicitar</th>
            <th>Editar</th>
            <th>Ver</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodigoPrescricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Utentes.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataPrescricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValidadePrescricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>

                <td>
                    <a class="btn btn-secondary" asp-action="PrecricaoSolicitacao" asp-controller="SolicitarsController">Solicitações</a>
                </td>

                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                </td>

                <td>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Ver</a>
                </td>

                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>

            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                language: {
                    'url': 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/pt-PT.json'
                }
            });
        });
    </script>
}





