@model SGH2425_V3.Models.Prescricao

@{
    ViewData["Title"] = "Create";
}

<div class="card rounded-4">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h6 class="mb-0">Registrar Prescrição</h6>
        </div>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CodigoPrescricao" class="control-label"></label>
                        <input asp-for="CodigoPrescricao" class="form-control" />
                        <span asp-validation-for="CodigoPrescricao" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="UtenteId" class="control-label"></label>
                        <select asp-for="UtenteId" class="form-control" asp-items="ViewBag.UtenteId"></select>
                    </div>
                </div>

               

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ValidadePrescricao" class="control-label"></label>
                        <input asp-for="ValidadePrescricao" class="form-control" />
                        <span asp-validation-for="ValidadePrescricao" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Estado" class="control-label"></label>
                        <input asp-for="Estado" class="form-control" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label"></label>
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                </div>


             
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />

                <a class="btn btn-warning" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}







