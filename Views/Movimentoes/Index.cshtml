@model IEnumerable<SGH2425_V3.Models.Movimento>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista das Movimentações</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Movimentação</a>
</p>
<table id="myTable" class=" table table-bordered table-responsive table-hover table-responsive-lg">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo_Movimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qtd_Movimento)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DataMovimento)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Solicitar)
            </th>

         

            <th>Editar</th>
            <th>Ver</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo_Movimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qtd_Movimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataMovimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Solicitar.PrescricaoId)
                </td>

              

                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                </td>

                <td>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Ver</a>
                </td>

                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>

            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                language: {
                    'url': 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/pt-PT.json'
                }
            });
        });
    </script>
}

